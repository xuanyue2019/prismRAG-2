# Agent Lightning 环境变量示例
# 复制此文件为 .env 并填写实际值

# OpenAI API 配置
OPENAI_API_KEY=your_openai_api_key_here

# AgentOps 监控配置
AGENTOPS_API_KEY=your_agentops_api_key_here

# 数据库配置 (可选)
POSTGRES_USER=agentlightning
POSTGRES_PASSWORD=your_postgres_password_here
POSTGRES_DB=agentlightning
DATABASE_URL=postgresql://agentlightning:your_postgres_password_here@postgres:5432/agentlightning

# 搜索 API 配置 (可选)
SEARCH_API_KEY=your_search_api_key_here

# Grafana 监控配置 (可选)
GRAFANA_PASSWORD=your_grafana_password_here

# 智能体配置
AGENT_API_KEY=your_agent_api_key_here

# 服务器配置
SERVER_HOST=0.0.0.0
SERVER_PORT=8000

# 模型配置
MODEL_NAME=gpt-3.5-turbo
MODEL_PROVIDER=openai

# 训练配置
BATCH_SIZE=32
LEARNING_RATE=1e-5

# 资源限制
MAX_MEMORY_MB=4096
MAX_CPU_PERCENT=80

# 网络配置
TIMEOUT_SECONDS=300
MAX_RETRY_ATTEMPTS=3

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=./logs/server.log

# 环境标识
ENVIRONMENT=development
DEBUG=true

# Docker 配置
DOCKER_REGISTRY=your_registry_here
DOCKER_IMAGE_TAG=latest

# Kubernetes 配置 (可选)
KUBE_NAMESPACE=agent-lightning
KUBE_CONTEXT=your_kube_context

# 云服务配置 (可选)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-west-2

# 其他 API 密钥
ANTHROPIC_API_KEY=your_anthropic_api_key_here
HUGGINGFACE_TOKEN=your_huggingface_token_here